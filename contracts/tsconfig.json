{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		"paths": {
			"@contracts/*":[	
				"./typechain-types/*",
				"./typechain-types/index.ts"
			],
			"@scripts/*": [
				"./scripts/*",
				"./scripts/index.ts"
			]
		}
  },
	"ts-node": {
		"require": [
			"tsconfig-paths/register" // https://stackoverflow.com/questions/56650711/cannot-find-module-that-is-defined-in-tsconfig-paths
		]
	},
}
